rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to validate file size and type
    function isValidDocument() {
      return request.resource.size < 10 * 1024 * 1024 && // 10MB limit
             (request.resource.contentType.matches('application/pdf') ||
              request.resource.contentType.matches('application/msword') ||
              request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.*') ||
              request.resource.contentType.matches('text/.*') ||
              request.resource.contentType.matches('application/vnd.ms-.*') ||
              request.resource.contentType.matches('application/x-.*'));
    }
    
    // Helper function to validate image files
    function isValidImage() {
      return request.resource.size < 10 * 1024 * 1024 && // 10MB limit
             request.resource.contentType.matches('image/.*');
    }
    
    // Lawyer verification documents - only the lawyer can upload their own documents
    match /lawyer-verification/{userId}/{fileName} {
      // Allow read if user is authenticated and is the owner
      // Admins can view through Firebase Console
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow upload if user is authenticated and matches the userId in the path
      allow write: if request.auth != null && 
                      request.auth.uid == userId &&
                      (isValidDocument() || isValidImage());
      
      // Allow delete if user is the owner
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Chat documents - accessible by session participants
    match /chat-documents/{sessionId}/{userId}/{fileName} {
      // Allow read if user is authenticated (we'll verify session access in Firestore)
      allow read: if request.auth != null;
      
      // Allow upload if user is authenticated and matches the userId in the path
      allow write: if request.auth != null && 
                      request.auth.uid == userId &&
                      isValidDocument();
      
      // Allow delete if user is the uploader
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Document history uploads - user's own documents
    match /documents/{userId}/{fileName} {
      // Allow read/write only if the user owns the document
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && 
                      request.auth.uid == userId &&
                      isValidDocument();
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
