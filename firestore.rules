rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is a lawyer
    function isLawyer() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'lawyer';
    }
    
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Document History collection - users can only access their own documents
    match /documentHistory/{documentId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Lawyer Profiles - public read for verified, write only by owner or admin
    match /lawyerProfiles/{profileId} {
      // Allow reading/listing profiles if authenticated
      // Using 'read' covers both 'get' (single doc) and 'list' (queries)
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.userId;
      allow update: if isAuthenticated() && (request.auth.uid == resource.data.userId || isAdmin());
      allow delete: if isAuthenticated() && (request.auth.uid == resource.data.userId || isAdmin());
    }
    
    // Lawyer Reviews - users can read all, create if authenticated, update/delete own
    match /lawyerReviews/{reviewId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Consultation Requests - users and lawyers can see their own
    match /consultationRequests/{requestId} {
      // Allow reading/listing consultation requests for participants
      // For queries, Firestore will only return documents that pass this rule
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || 
         resource.data.lawyerId == request.auth.uid || 
         isAdmin());
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || 
         resource.data.lawyerId == request.auth.uid || 
         isAdmin());
      allow delete: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Chat Sessions - only participants can access
    match /chatSessions/{sessionId} {
      // Helper function to check if user is a participant
      function isSessionParticipant() {
        return resource.data.participants.userId == request.auth.uid || 
               resource.data.participants.lawyerId == request.auth.uid;
      }
      
      // Allow reading individual chat sessions for participants
      allow get: if isAuthenticated() && isSessionParticipant();
      
      // Allow listing chat sessions - Firestore will filter results
      // This allows queries but only returns documents where user is a participant
      allow list: if isAuthenticated();
      
      // Allow creating chat sessions if user is one of the participants
      allow create: if isAuthenticated() && (
        request.resource.data.participants.userId == request.auth.uid || 
        request.resource.data.participants.lawyerId == request.auth.uid
      );
      
      // Allow updating chat sessions for participants (for updating lastMessageAt, etc)
      allow update: if isAuthenticated() && isSessionParticipant();
      
      // Chat messages subcollection
      match /messages/{messageId} {
        // Get parent session data to check participation
        function getSession() {
          return get(/databases/$(database)/documents/chatSessions/$(sessionId)).data;
        }
        
        function isParticipant() {
          return getSession().participants.userId == request.auth.uid || 
                 getSession().participants.lawyerId == request.auth.uid;
        }
        
        // Allow reading messages if user is a participant of the chat session
        allow read: if isAuthenticated() && isParticipant();
        
        // Allow creating messages if user is a participant and is the sender
        allow create: if isAuthenticated() && 
          request.resource.data.senderId == request.auth.uid &&
          isParticipant();
        
        // Allow updating messages for participants (for marking as read)
        allow update: if isAuthenticated() && isParticipant();
      }
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
